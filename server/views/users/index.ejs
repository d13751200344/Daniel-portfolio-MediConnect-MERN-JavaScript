<%- include("../shared/_header") %>

<div class="container mt-5">
    <h1>User List</h1>

    <hr class="my-5">

    <a href="/users/new" class="create-link">Create a new user</a>

    <div class="table-responsive mt-4">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-center">MINC</th>
                    <th class="text-center">First Name</th>
                    <th class="text-center">Last Name</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Nickname</th>
                    <th class="text-center">Last Updated</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
                <% if (users && users.length > 0) { %>
                    <% users.forEach(({ id, minc, firstName, lastName, email, nickname, updatedAt }) => { %>
                        <tr>
                            <td class="text-center"><%= minc %></td>
                            <td class="text-center"><%= firstName %></td>
                            <td class="text-center"><%= lastName %></td>
                            <td class="text-center"><%= email %></td>
                            <td class="text-center"><%= nickname %></td>
                            <td class="text-center"><%= updatedAt %></td>
                            <td class="text-center">
                                <a href="/users/<%= id %>" class="btn btn-sm btn-success mb-2">View</a>
                                <a href="/users/<%= id %>/edit" class="btn btn-sm btn-warning mb-2">Edit</a>
                                <form action="/users/<%= id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this user?')">
                                    <input type="hidden" name="_method" value="delete">
                                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center">No users found</td>
                        </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include("../shared/_footer") %>s