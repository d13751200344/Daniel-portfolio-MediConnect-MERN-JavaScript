<%- include("../shared/_header") %>

    <div class="container mt-5">
        <h1>Hospital</h1>

        <hr class="my-5">

        <div class="table-responsive mb-2">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Hospital Name</th>
                        <th class="text-center">Location</th>
                        <th class="text-center">Last Updated</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td class="text-center">
                            <%= hospital.hospitalName %>
                        </td>
                        <td>
                            <%= hospital.location %>
                        </td>
                        <td class="text-center">
                            <%= hospital.updatedAt %>
                        </td>
                        <td class="text-center">
                            <a href="/hospitals/<%= hospital.id %>/edit" class="btn btn-sm btn-warning mb-2">Edit</a>
                            <form action="/hospitals/<%= hospital.id %>" method="post"
                                onsubmit="return confirm('Are you sure you want to delete this hospital?')">
                                <input type="hidden" name="_method" value="delete">
                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <a href="/hospitals" class="back-link">Back to hospitals</a>
    </div>



    <%- include("../shared/_footer") %>