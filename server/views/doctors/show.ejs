<%- include("../shared/_header") %>

    <div class="container mt-5">
        <h1>Doctor</h1>

        <hr class="my-5">

        <div class="table-responsive mb-2">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Doctor Name</th>
                        <th class="text-center">Medical Specialty</th>
                        <th class="text-center">Hospital</th>
                        <th class="text-center">Last Updated</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td class="text-center">
                            <%= doctor.doctorName %>
                        </td>
                        <td class="text-center">
                            <%= doctor.medicalSpecialty %>
                        </td>
                        <td class="text-center">
                            <a href="/hospitals/<%= doctor.hospital %>">
                                <%= doctorHospitalName %>
                            </a>
                        </td>
                        <td class="text-center">
                            <%= doctor.updatedAt %>
                        </td>
                        <td class="text-center">
                            <a href="/doctors/<%= doctor.id %>/edit" class="btn btn-sm btn-warning mb-2">Edit</a>
                            <form action="/doctors/<%= doctor.id %>" method="post"
                                onsubmit="return confirm('Are you sure you want to delete this doctor?')">
                                <input type="hidden" name="_method" value="delete">
                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <a href="/doctors" class="back-link">Back to doctors</a>
    </div>



    <%- include("../shared/_footer") %>